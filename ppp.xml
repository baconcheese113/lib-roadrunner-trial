<?xml version="1.0" encoding="UTF-8"?>
<sbml xmlns="http://www.sbml.org/sbml/level2/version5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sbml.org/sbml/level2/version5 https://sbml.org/documents/specifications/level-2/version-5/release-1/sbml.level-2.version-5.release-1.xsd"
  level="2" version="5">
  <model id="PPP" name="Pentose Phosphate Pathway">
    <listOfUnitDefinitions>
      <unitDefinition id="mM" name="mM">
        <listOfUnits>
          <unit kind="mole" scale="-3"/>
          <unit kind="litre" exponent="-1"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="mM_per_min" name="mM_per_min">
        <listOfUnits>
          <unit kind="mole" scale="-3"/>
          <unit kind="litre" exponent="-1"/>
          <unit kind="second" exponent="-1" multiplier="60"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="per_min" name="per_min">
        <listOfUnits>
          <unit kind="second" exponent="-1" multiplier="60"/>
        </listOfUnits>
      </unitDefinition>
    </listOfUnitDefinitions>
    <listOfCompartments>
      <compartment id="cytosol" size="1" name="Cytosol"/>
    </listOfCompartments>
    <listOfSpecies>
      <!-- Retain only essential species -->
      <species id="G6P" name="Glucose 6 Phosphate" compartment="cytosol" initialConcentration="2.45"/>
      <species id="NADP" name="Nicotinamide Adenine Dinucleotide Phosphate (oxidized)" compartment="cytosol" initialConcentration="0.1"/>
      <species id="NADPH" name="Nicotinamide Adenine Dinucleotide Phosphate (reduced)" compartment="cytosol" initialConcentration="0.1"/>
      <species id="P6GL" name="6-Phosphogluconolactone" compartment="cytosol" initialConcentration="0.1"/>
      <species id="H" compartment="cytosol" initialConcentration="1" boundaryCondition="true" constant="true" name="Proton (cytosolic)"/>
    </listOfSpecies>
    <listOfParameters>
      <parameter id="toggle_vG6PDH" value="1" units="dimensionless"/>
    </listOfParameters>
    <listOfReactions>
      <!-- Retain only the G6PDH reaction with reduced Vmax -->
      <reaction id="vG6PDH" name="Glucose-6-phosphate Dehydrogenase" reversible="false">
        <listOfReactants>
          <speciesReference species="G6P"/>
          <speciesReference species="NADP"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="P6GL"/>
          <speciesReference species="NADPH"/>
          <speciesReference species="H"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci>toggle_vG6PDH</ci>
              <ci>VmG6PDH</ci>
              <apply>
                <divide/>
                <ci>G6P</ci>
                <apply>
                  <plus/>
                  <ci>KmG6PDH_G6P</ci>
                  <ci>G6P</ci>
                </apply>
              </apply>
              <apply>
                <divide/>
                <ci>NADP</ci>
                <apply>
                  <plus/>
                  <ci>KmG6PDH_NADP</ci>
                  <ci>NADP</ci>
                </apply>
              </apply>
            </apply>
          </math>
          <listOfParameters>
            <parameter id="VmG6PDH" value="0.01" units="mM_per_min"/> <!-- Reduced Vmax -->
            <parameter id="KmG6PDH_G6P" value="0.1" units="mM"/>
            <parameter id="KmG6PDH_NADP" value="0.01" units="mM"/>
          </listOfParameters>
        </kineticLaw>
      </reaction>
    </listOfReactions>
  </model>
</sbml>